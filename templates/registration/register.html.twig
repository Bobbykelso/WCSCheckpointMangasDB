{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="carousel-registration">
        <img class="image" src="build/images/dorowallpaper.jpg" alt="Doroehdoro wallpaper">
    </div>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="register-container mt-3">
        <h1 class="mt-4 mb-4">Inscription Nouvel Utilisateur</h1>
        <div class="register-form">
            {{ form_start(registrationForm) }}
            <div class="info-register col-1 mb-2 mt-3">
                {{ form_label(registrationForm.firstname, 'Pr√©nom') }}
                {{ form_errors(registrationForm.firstname) }}
                {{ form_widget(registrationForm.firstname, {'attr': {'class': 'input-inscription'}}) }}
            </div>
            <div class="info-register col-1 mb-2 mt-3">
                {{ form_label(registrationForm.lastname, 'Nom') }}
                {{ form_errors(registrationForm.lastname) }}
                {{ form_widget(registrationForm.lastname, {'attr': {'class': 'input-register'}}) }}
            </div>
            <div class="info-register col-1 mb-2 mt-3">
                {{ form_label(registrationForm.username, 'Pseudonyme') }}
                {{ form_errors(registrationForm.username) }}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'input-register'}}) }}
            </div>
            <div class="info-register col-1 mb-2 mt-3">
                {{ form_label(registrationForm.avatar, 'Avatar') }}
                {{ form_errors(registrationForm.avatar) }}
                {{ form_widget(registrationForm.avatar, {'attr': {'class': 'input-register'}}) }}
            </div>
            <div class="info-register col-1 mb-2 mt-3">
                {{ form_label(registrationForm.email, 'Email') }}
                {{ form_errors(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'input-register'}}) }}
            </div>
            <div class="info-register col-1 mb-2 mt-3">
                {{ form_label(registrationForm.plainPassword, 'Mot de Passe') }}
                {{ form_errors(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input-register'}}) }}
            </div>
            <div class="info-register col-1 mb-2 mt-3">
                {{ form_label(registrationForm.agreeTerms,
                    'Conditions d\'Utilisations',
                    {'label_attr': {'class': 'checkbox'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox-register'}}) }}
            </div>
            <div class="btn-register">
                <button type="submit" class="mt-3 btn btn-light btn-outline-success">Enregistrer</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
